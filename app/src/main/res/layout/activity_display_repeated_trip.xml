<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_display.ActivityDisplayRepeatedTrip">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD FOR STARTING INFO -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                style="@style/cardMainBackground"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <!-- TITLE -->
                    <TextView
                        android:id="@+id/display_repeated_trip_text_view_title_legend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial"
                        android:text="@string/text_view_title"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/display_repeated_trip_text_view_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial"
                        android:text="@string/loading"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- TIMES REPEATING -->
                    <TextView
                        android:id="@+id/display_repeated_trip_text_view_times_repeating_legend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        style="@style/textColorSpecial"
                        android:text="@string/edit_text_repeated_trips_times_occurring"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/display_repeated_trip_text_view_times_repeating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        style="@style/textColorSpecial"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- TRIP'S TOTAL KM -->
                    <TextView
                        android:id="@+id/display_repeated_trip_text_view_total_km_legend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        style="@style/textColorSpecial"
                        android:text="@string/text_view_repeated_trips_km_legend"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/display_repeated_trip_text_view_total_km"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        style="@style/textColorSpecial"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/analytics_per_one_time"
                android:paddingTop="15dp"
                style="@style/textColor"
                android:textSize="26sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                style="@style/cardMainBackground"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <!-- BEST CASE -->
                    <TextView
                        android:id="@+id/bestCostPerTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial1"
                        android:text="@string/loading"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bestLtPerTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial1"
                        android:layout_marginBottom="10dp"
                        android:text="@string/loading"
                        android:textSize="18sp" />

                    <!-- AVERAGE -->
                    <TextView
                        android:id="@+id/averageCostPerTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        style="@style/textColorSpecial"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/averageLtPerTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:layout_marginBottom="10dp"
                        style="@style/textColorSpecial"
                        android:textSize="18sp" />

                    <!-- WORST CASE -->
                    <TextView
                        android:id="@+id/worstCostPerTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial2"
                        android:text="@string/loading"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/worstLtPerTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial2"
                        android:text="@string/loading"
                        android:textSize="18sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textWeekly"
                android:text="@string/analytics_weekly"
                android:paddingTop="15dp"
                style="@style/textColor"
                android:textSize="26sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/cardWeekly"
                style="@style/cardSpecialBackground"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <!-- BEST CASE -->
                    <TextView
                        android:id="@+id/bestCostPerWeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial1"
                        android:text="@string/loading"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bestLtPerWeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial1"
                        android:layout_marginBottom="10dp"
                        android:text="@string/loading"
                        android:textSize="18sp" />

                    <!-- AVERAGE -->
                    <TextView
                        android:id="@+id/averageCostPerWeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        style="@style/textColorSpecial"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/averageLtPerWeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:layout_marginBottom="10dp"
                        style="@style/textColorSpecial"
                        android:textSize="18sp" />

                    <!-- WORST CASE -->
                    <TextView
                        android:id="@+id/worstCostPerWeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial2"
                        android:text="@string/loading"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/worstLtPerWeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial2"
                        android:text="@string/loading"
                        android:textSize="18sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trip_info_caps"
                android:paddingTop="15dp"
                style="@style/textColor"
                android:textSize="26sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <!-- CARD FOR TRIP -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                style="@style/cardMainBackground"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <!-- FROM TO -->
                    <TextView
                        android:id="@+id/display_repeated_trip_text_view_from_origin_to_destination_legend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial"
                        android:text="@string/display_trip_trip"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/display_repeated_trip_text_view_from_origin_to_destination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial"
                        android:text="@string/loading"
                        android:layout_marginBottom="20dp"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- SHOW ON MAP BUTTON -->
                    <Button
                        android:id="@+id/display_repeated_trip_button_show_on_map"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginBottom="10dp"
                        android:autoSizeMaxTextSize="18sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:letterSpacing="0.02"
                        android:text="@string/display_trip_show_on_map"
                        app:cardCornerRadius="50dp"
                        app:cornerRadius="65dp"
                        app:icon="@android:drawable/ic_dialog_map" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- BUTTONS -->
    <include
        layout="@layout/bottom_delete_edit_buttons" />

</LinearLayout>