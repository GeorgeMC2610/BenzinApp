<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.history.HistoryFragment">

    <!-- FUEL FILLS COUNT TEXT VIEW -->
    <TextView
        android:id="@+id/text_view_history_total_fuel_fill_records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x Total Fuel Fill Records"
        android:visibility="invisible"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp" />

    <!-- MAIN LAYOUT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="65dp"
        android:orientation="vertical">

        <!-- MAIN SCROLL VIEW WITH RECORDS -->
        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp">

            <LinearLayout
                android:id="@+id/historyFragment_linearLayoutScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

        <!-- SCROLL VIEW FOR NO RECORDS -->
        <ScrollView
            android:id="@+id/scroll_view_no_records"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="65dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image_view_records_nothing"
                    android:contentDescription="@string/text_view_no_data"
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/no_petrol_icon" />

                <TextView
                    android:id="@+id/text_view_no_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:text="@string/text_view_no_data"
                    android:textAlignment="center" />

            </LinearLayout>
        </ScrollView>

        <!-- LAYOUT WITH TEXT AND BUTTON -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewClickCardsMsg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:text="@string/text_view_click_cards_message" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:outlineSpotShadowColor="@android:color/transparent"
                android:layout_weight="0"
                android:src="@android:drawable/ic_input_add"
                style="@style/buttonMainBackground" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>