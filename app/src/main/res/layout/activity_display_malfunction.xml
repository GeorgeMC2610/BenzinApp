<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity_display.ActivityDisplayMalfunction">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/linearLayoutDisplayMalfunctionData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD FOR STARTING INFO -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                style="@style/cardMainBackground"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- DATE STARTED -->
                    <TextView
                        android:id="@+id/text_view_display_malfunction_legend_date_started"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/text_view_started"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_view_display_malfunction_date_started"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        style="@style/textColorSpecial"
                        android:text="@string/loading"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- DISCOVERED AT KM -->
                    <TextView
                        android:id="@+id/text_view_display_malfunction_legend_discovered_at_km"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/text_view_at_km"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_view_display_malfunction_discovered_at_km"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/loading"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- STATUS -->
                    <TextView
                        android:id="@+id/text_view_display_malfunction_legend_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        style="@style/textColorSpecial"
                        android:text="Status:"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_view_display_malfunction_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        style="@style/textColorSpecial"
                        android:text="@string/loading"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- CARD FOR DETAILED INFO -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                style="@style/cardMainBackground"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- TITLE -->
                    <TextView
                        android:id="@+id/text_view_display_malfunction_legend_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        style="@style/textColorSpecial"
                        android:text="@string/text_view_title"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_view_display_malfunction_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        style="@style/textColorSpecial"
                        android:text="@string/loading"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- DESCRIPTION -->
                    <TextView
                        android:id="@+id/text_view_display_malfunction_legend_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        style="@style/textColorSpecial"
                        android:textStyle="bold"
                        android:text="@string/text_view_description"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_view_display_malfunction_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/loading"
                        android:fontFamily="sans-serif"
                        style="@style/textColorSpecial"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD FOR DETAILED INFO -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/card_fix"
                android:visibility="visible"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                style="@style/cardSpecialBackground"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- DATE ENDED -->
                    <TextView
                        android:id="@+id/text_view_display_malfunction_legend_date_ended"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/text_view_date_ended"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_view_display_malfunction_date_ended"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="24sp"
                        android:text="@string/loading"
                        android:textStyle="bold" />

                    <!-- LOCATION FIXED -->
                    <TextView
                        android:id="@+id/text_view_display_malfunction_legend_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/text_view_location"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_view_display_malfunction_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial"
                        android:text="@string/loading"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- COST EUR -->
                    <TextView
                        android:id="@+id/text_view_display_malfunction_legend_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/text_view_cost"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_view_display_malfunction_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textColorSpecial"
                        android:text="@string/loading"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="15dp"
                        android:textSize="24sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/buttonDelete"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="#990000"
            android:padding="12dp"
            android:gravity="center"
            android:textSize="16sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/deleteText"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="-40dp"
                    android:background="@android:drawable/ic_menu_delete"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/deleteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="DELETE"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/buttonEdit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="#2266BB"
            android:padding="12dp"
            android:gravity="center"
            android:textSize="16sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/editText"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="-50dp"
                    android:background="@android:drawable/ic_menu_edit"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="EDIT"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>