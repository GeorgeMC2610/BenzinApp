<resources>
    <!-- Base application theme. -->
    <style name="Theme.BenzinApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorSecondary">#009900</item>
        <item name="colorSecondaryVariant">#004400</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorPrimary">#009900</item>
        <item name="colorPrimaryVariant">#004400</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- for the cards and the texts -->
    <style name="screenBackground"><item name="android:backgroundTint">@color/black</item></style>
    <style name="cardMainBackground"><item name="android:backgroundTint">@color/very_dark_gray</item></style>
    <style name="cardSpecialBackground"><item name="android:backgroundTint">@color/card_special_dark</item></style>

    <style name="buttonMainBackground">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="buttonEditBackground">
        <item name="android:backgroundTint">@color/edit_record_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="editButton">
        <item name="android:backgroundTint">@color/edit_record_dark</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="buttonDeleteBackground">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="deleteButton">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="addButton">
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="genericField" parent="android:Widget.EditText">
        <item name="android:background">@drawable/rounded_corner_field_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_gray</item>
    </style>

    <style name="selectDate">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="selectToday">
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mainBackground">
        <item name="android:background">
            @drawable/login_background_gradient_dark
        </item>
    </style>

    <style name="secondaryBackground">
        <item name="android:background">
            @drawable/register_background_gradient_dark
        </item>
    </style>

    <style name="textColor"><item name="android:textColor">@color/white</item></style>
    <style name="textColorSpecial"><item name="android:textColor">@color/gray</item></style>
    <style name="textColorSpecial1"><item name="android:textColor">@color/green</item></style>
    <style name="textColorSpecial2"><item name="android:textColor">@color/red</item></style>
    <style name="textColorSpecial3"><item name="android:textColor">@color/car_manufacturer_dark</item></style>
    <style name="textColorSpecial4"><item name="android:textColor">@color/car_model_dark</item></style>
</resources>