<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BenzinApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ff9900</item>
        <item name="colorPrimaryVariant">#bb6600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ff9900</item>
        <item name="colorSecondaryVariant">#bb6600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- for the cards and the texts -->
    <style name="screenBackground"><item name="android:backgroundTint">@color/white</item></style>
    <style name="cardMainBackground"><item name="android:backgroundTint">@color/white</item></style>
    <style name="cardSpecialBackground"><item name="android:backgroundTint">@color/card_special_light</item></style>
    <style name="buttonMainBackground">
        <item name="android:backgroundTint">@color/main</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="buttonEditBackground">
        <item name="android:backgroundTint">@color/edit_record_light</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="buttonDeleteBackground" parent="android:MediaButton">
        <item name="android:backgroundTint">@color/dark_red</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="textColor"><item name="android:textColor">@color/black</item></style>
    <style name="textColorSpecial"><item name="android:textColor">@color/dark_gray</item></style>
    <style name="textColorSpecial1"><item name="android:textColor">@color/dark_green</item></style>
    <style name="textColorSpecial2"><item name="android:textColor">@color/dark_red</item></style>
    <style name="textColorSpecial3"><item name="android:textColor">@color/car_manufacturer_light</item></style>
    <style name="textColorSpecial4"><item name="android:textColor">@color/car_model_light</item></style>

</resources>