<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BenzinApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ff9900</item>
        <item name="colorPrimaryVariant">#bb6600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#009900</item>
        <item name="colorSecondaryVariant">#004400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- for the cards and the texts -->
    <style name="screenBackground"><item name="android:background">@color/white</item></style>
    <style name="cardMainBackground"><item name="android:background">@color/white</item></style>
    <style name="cardSpecialBackground"><item name="android:background">@color/card_special_light</item></style>
    <style name="buttonMainBackground"><item name="android:backgroundTint">@color/main</item></style>
    <style name="buttonEditBackground"><item name="android:backgroundTint">@color/edit_record_dark</item></style>
    <style name="textColor"><item name="android:textColor">@color/black</item></style>
    <style name="textColorSpecial"><item name="android:textColor">@color/dark_gray</item></style>
    <style name="textColorSpecial1"><item name="android:textColor">@color/dark_green</item></style>
    <style name="textColorSpecial2"><item name="android:textColor">@color/dark_red</item></style>

</resources>