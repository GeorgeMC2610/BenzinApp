<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/benzinapp_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BenzinApp"
        tools:targetApi="31">
        <activity
            android:name=".acitvity_add.ActivityAddRepeatedTrip"
            android:exported="false" />
        <!--
             TODO: Before you run your application, you need a Google Maps API key.

             To get one, follow the directions here:

                https://developers.google.com/maps/documentation/android-sdk/get-api-key

             Once you have your API key (it starts with "AIza"), define a new property in your
             project's local.properties file (e.g. MAPS_API_KEY=Aiza...), and replace the
             "YOUR_API_KEY" string in this file with "${MAPS_API_KEY}".
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".MapsDisplayPointActivity"
            android:exported="false"
            android:label="@string/title_activity_maps_display_point" />
        <activity
            android:name=".activity_display.ActivityDisplayService"
            android:exported="false" />
        <activity
            android:name=".activity_display.ActivityDisplayMalfunction"
            android:exported="false" />
        <activity
            android:name=".activity_edit.ActivityEditService"
            android:exported="false" />
        <activity
            android:name=".activity_edit.ActivityEditMalfunction"
            android:exported="false" />
        <activity
            android:name=".acitvity_add.ActivityAddMalfunction"
            android:exported="false" />
        <activity
            android:name=".MapsActivity"
            android:exported="false"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".acitvity_add.ActivityAddService"
            android:exported="false" />
        <activity
            android:name=".activity_edit.ActivityEditRecord"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity_display.ActivityDisplayFuelFillRecord"
            android:exported="false" />
        <activity
            android:name=".acitvity_add.ActivityAddRecord"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>